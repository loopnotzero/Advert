@using System.Globalization
@using Advert.Common.Profiles
@using Advert.Models.Profiles
@model ProfileViewModel

<div id="edit__profile--modal" class="modal fade" data-backdrop="static" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <span class="font-weight-bold">Edit profile</span>
                <button id="edit-profile__close" type="button" class="btn btn-link" data-dismiss="modal">
                    <span>
                        <i class="zmdi zmdi-close zmdi-hc-fw"></i>
                    </span>
                </button>
            </div>
            <div class="modal-body">
                <div class="tab-container">
                    <ul class="nav nav-tabs nav-fill" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link show active" data-toggle="tab" href="#edit__profile--tab" role="tab" aria-selected="false">Edit Profile</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link show" data-toggle="tab" href="#change__password--tab" role="tab" aria-selected="false">Change Password</a>
                        </li>
                    </ul>

                    <div class="tab-content">
                        <div id="edit__profile--tab" class="tab-pane fade show active" role="tabpanel">
                            <div class="form-group">
                                <label class="font-weight-bold">Email</label>
                                <input id="edit__profile--email" type="text" class="form-control" value="@Model.Email" readonly="readonly">
                                <i class="form-group__bar"></i>
                            </div>
                            <div class="form-group">
                                <label class="font-weight-bold">Name</label>
                                <input id="edit__profile--name" type="text" class="form-control" value="@Model.Name" readonly="readonly">
                                <i class="form-group__bar"></i>
                            </div>
                            <div class="form-group">
                                <label class="font-weight-bold">Birthday</label>
                                @if (string.IsNullOrEmpty(Model.Birthday))
                                {
                                    <input id="edit__profile--birthday" class="form-control flatpickr flatpickr-input" style="display: block !important; color: #C0C0C0;" type="text" placeholder="Enter you birthday">
                                }
                                else
                                {
                                    <input id="edit__profile--birthday" class="form-control flatpickr flatpickr-input" style="display: block !important; color: #C0C0C0;" type="text" placeholder="Enter you birthday" value="@DateTime.ParseExact(Model.Birthday, "dd MMMM yyyy", CultureInfo.InvariantCulture).ToString("yyyy-MM-dd")">
                                }
                                <i class="form-group__bar"></i>
                            </div>
                            <div class="form-group">
                                <label class="font-weight-bold">Gender</label>
                                <select id="edit__profile--gender" class="form-control select2-pt">
                                    @foreach (var gender in Enum.GetNames(typeof(Gender)))
                                    {
                                        if (Model.Gender.ToUpper().Equals(gender.ToUpper()))
                                        {
                                            <option selected="selected">@gender</option>
                                        }
                                        else
                                        {
                                            <option>@gender</option>
                                        }
                                    }
                                </select>
                                <i class="form-group__bar"></i>
                            </div>
                            <div class="form-group">
                                <label class="font-weight-bold">Location</label>
                                @if (string.IsNullOrEmpty(Model.Location))
                                {
                                    <input id="edit__profile--location" type="text" class="form-control" placeholder="Enter a location">
                                }
                                else
                                {
                                    <input id="edit__profile--location" type="text" class="form-control" placeholder="Enter a location" value="@Model.Location">
                                }
                                <i class="form-group__bar"></i>
                            </div>
                            <div class="form-group">
                                <label class="font-weight-bold">Add profile photo</label>
                                <form asp-controller="Posts" asp-action="AddPostPhotos" class="dropzone needsclick dz-clickable" id="profile-dropzone">
                                    <div class="dz-message needsclick">
                                        <img src="~/images/add-photos.png"/>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <div id="change__password--tab" class="tab-pane fade show" role="tabpanel">
                            <div class="form-group">
                                <label class="font-weight-bold">Old password</label>
                                <input id="change__password--old" type="password" class="form-control" placeholder="Enter old password">
                                <i class="form-group__bar"></i>
                            </div>
                            <div class="form-group">
                                <label class="font-weight-bold">New password</label>
                                <input id="change__password--new" type="password" class="form-control" placeholder="Enter new password">
                                <i class="form-group__bar"></i>
                            </div>
                            <div class="form-group">
                                <label class="font-weight-bold">Confirm password</label>
                                <input id="change__password--confirm" type="password" class="form-control" placeholder="Confirm new password">
                                <i class="form-group__bar"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button id="edit__profile--cancel" type="button" class="btn btn-light" data-dismiss="modal">
                    Cancel
                </button>
                <button id="edit__profile--save" type="button" class="btn btn-primary" onclick="onEditProfileSaveChangesClick('@Model.Id')">
                    Save changes
                </button>
            </div>
        </div>
    </div>
</div>

