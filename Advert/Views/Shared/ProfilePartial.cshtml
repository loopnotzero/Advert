@using Advert.Models.Profiles
@model ProfileModel

<div class="profile-header">
    <a href="" class="zmdi zmdi-edit float-right" data-placement="top" data-target="#edit-profile__modal" data-toggle="modal">
    </a>
</div>

@if (string.IsNullOrEmpty(Model.ImagePath))
{
    <img id="profile-image" src="~/images/no-image.png" class="team__img" alt="">
}
else
{
    <img id="profile-image" src="@Model.ImagePath" class="team__img" alt="">
}
<div class="card-body">
    <a href="/@Model.Name">
        <h5 class="card-title">@@@Model.Name</h5>
    </a> 
    <div style="border-bottom: 1px solid #d5d5d5; margin-bottom: 10px;">
    </div>
    <p>
        Joined March 2018
    </p>
    <p>
        Born November 12, 1989
    </p>
</div>

@await Html.PartialAsync("EditProfileModal")

