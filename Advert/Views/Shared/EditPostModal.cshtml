<div id="edit-post__modal" class="modal fade" data-backdrop="static" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <span class="font-weight-bold">Edit post</span>
                <button id="edit-post__close" type="button" class="btn btn-link" data-dismiss="modal">
                    <span>
                        <i class="zmdi zmdi-close zmdi-hc-fw"></i>
                    </span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <input id="edit-post__title" type="text" class="form-control" maxlength="100" placeholder="What are you selling?" autocomplete="off">
                    <i class="form-group__bar"></i>
                </div>
                
                <div class="form-group">
                    <input id="edit-post__location" type="text" class="form-control" placeholder="Enter a location (optional)">
                    <i class="form-group__bar"></i>
                </div>
                
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <input id="edit-post__price" type="number" class="form-control" placeholder="Price" autocomplete="off">
                            <i class="form-group__bar"></i>
                        </div>     
                    </div>
                    <div class="col-md-6">
                        <select id="edit-post__currency">
                        </select>
                    </div>
                </div>

                <div class="mt-4">
                    <textarea id="edit-post__text--editor" style="display: none"></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button id="edit-post__save" type="button" class="btn btn-primary__advert">
                    Save
                </button>
            </div>
        </div>
    </div>
</div>