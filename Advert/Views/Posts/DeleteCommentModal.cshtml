@using Advert.Models.Post
@model PostCommentViewModel

<div id="delete-comment__modal--@Model.CommentId" class="modal fade" data-backdrop="static" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <span class="font-weight-bold">Delete comment</span>
                <button id="delete-comment__close--@Model.CommentId" type="button" class="btn btn-link" data-dismiss="modal">
                    <span>
                        <i class="zmdi zmdi-close zmdi-hc-fw"></i>
                    </span>
                </button>
            </div>
            <div class="modal-body">          
                You are about to delete this comment.
            </div>
            <div class="modal-footer">
                <button id="delete-comment__cancel--@Model.CommentId" type="button" class="btn btn-light" data-dismiss="modal">
                    Cancel
                </button>
                <button id="delete-comment__delete--@Model.CommentId" type="button" class="btn btn-primary__advert">
                    Delete
                </button>
            </div>
        </div>
    </div>
</div>