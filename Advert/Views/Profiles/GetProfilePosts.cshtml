@using Advert.Models.Post
@model PostsAggregatorViewModel

@await Html.PartialAsync("_Header", Model.Profile)


<section class="content">
    <div class="row">
        <div class="col-md-3 p-1">
            <div class="card team__item">
                @if (string.IsNullOrEmpty(Model.Profile.ImagePath))
                {
                    <img src="~/images/no-image.png" class="team__img" alt="">
                }
                else
                {
                    <img src="@Model.Profile.ImagePath" class="team__img" alt="">
                }
                <div class="card-body">
                    <a href="/@Model.Profile.ProfileName">
                        <h4 class="card-title">@@@Model.Profile.ProfileName</h4>
                    </a>
                    <p class="card-text">
                        @Model.Profile.ProfileDescription
                    </p>
                    <div style="border-bottom: 1px solid #d5d5d5; margin-bottom: 10px;">
                    </div>
                    <div class="zmdi zmdi-facebook bg-indigo"></div>
                </div>
            </div>
        </div>
        <div class="col-md-9 p-1">
            @{
                <div class="card">
                    <ul class="nav nav-tabs">
                        <li class="nav-item">
                            <a class="nav-link" href="/@Model.Profile.ProfileName">Profile</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="/@Model.Profile.ProfileName/Posts">Posts</a>
                        </li>
                    </ul>
                    
                    @foreach (var post in Model.Posts)
                    {
                        <article id="@post.PostId">
                            <div class="card-header">
                                @await Html.PartialAsync("PostHeaderPartial", post)
                            </div>
                            <div class="card-body">
                                <a href="/Posts?postId=@post.PostId">
                                    <h4 class="card-text__title font-weight-bold cut-long-text">@post.Title</h4>
                                </a>
                                @await Html.PartialAsync("PostContentPartial", post)
                            </div>
                            <div class="card-footer">
                                @await Html.PartialAsync("PostFooterPartial", post)
                            </div>
                            <div style="border-bottom: 1px solid #d5d5d5;"></div>
                            @await Html.PartialAsync("EditPostTagsModal", post)
                        </article>
                    }
                </div>
            }
        </div>
    </div>
</section>

<script>

</script>