@using Humanizer
@model IEnumerable<Egghead.Models.Articles.ArticleModel>

@Html.Partial("GetArticlesPreviewNavigationMenuPartial")

<div class="container-boxed">
    <div class="row">
        <div class="col-md-9 p-1">
            <div id="articles-preview" class="container-fluid">
            </div>
        </div>
        <div class="col-md-3 p-1">
            <div class="card p-2 mb-3">
                <div style="border-bottom: 1px solid #d5d5d5; margin-bottom: 20px;">
                    <h4 class="text-muted font-bold">Profile</h4>
                </div>
                <div class="text-center">
                    <div class="mb-3">
                        <img src="/images/users/avatar-1.jpg" class="rounded-circle img-thumbnail" alt="profile-image">
                    </div>

                    <div class="mb-3">
                        <h5 class="m-b-5">Mark McKnight</h5>
                        <p class="text-muted">Programmer</p>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <span class="text-justify">Your articles</span> 
                            <h5 class="text-center">5</h5> 
                        </div>
                        <div class="col-md-6">
                            <span class="text-justify">Following</span>
                            <h5 class="text-center">10</h5> 
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-12">
                            <ul class="social-links list-inline">
                                <li class="list-inline-item">
                                    <a title="" data-placement="top" data-toggle="tooltip" class="tooltips" href="" data-original-title="Facebook">
                                        <i class="fa fa-facebook"></i>
                                    </a>
                                </li>
                                <li class="list-inline-item">
                                    <a title="" data-placement="top" data-toggle="tooltip" class="tooltips" href="" data-original-title="Twitter">
                                        <i class="fa fa-twitter"></i>
                                    </a>
                                </li>
                                <li class="list-inline-item">
                                    <a title="" data-placement="top" data-toggle="tooltip" class="tooltips" href="" data-original-title="Skype">
                                        <i class="fa fa-skype"></i>
                                    </a>
                                </li>
                            </ul>
                        </div>                    
                    </div>
                </div>
            </div>
            <div class="card p-4">
                <div style="border-bottom: 1px solid #d5d5d5; margin-bottom: 20px;">
                    <h4 class="text-muted font-bold">Popular on Egghead</h4>
                </div>

                @if (Model != null)
                {
                    <div class="listview">
                        @foreach (var article in Model)
                        {
                            <div class="listview__item">
                                <img src="/images/users/avatar-1.jpg" class="listview__img" alt="">

                                <div class="listview__content">
                                    <div class="listview__heading">
                                        <p>
                                            <a href="/Articles/GetArticleContent?articleId=@article.Id">@article.Title</a>
                                        </p>
                                    </div>
                                    <p>
                                        @article.FirstName @article.LastName <small class="time"> @article.CreatedAt.Humanize()</small>
                                    </p>
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<script>
    function onVoteClick(articleId, voteType) {
        var vote = {
            voteType: voteType
        }
        $.ajax({
            url: "/Articles/CreateArticleVote?articleId=" + articleId,
            type: "POST",
            data: JSON.stringify(vote),
            contentType: "application/json",
            error: function(jqXhr, textStatus, errorThrown) {
                console.log("jqXhr: " + jqXhr);
                console.log("textStatus: " + jqXhr);
                console.log("errorThrown: " + jqXhr);
            },
            success: function(response) {
                switch (voteType) {
                case 1:
                    {
                        $(`#${articleId} small[name=likes]`).text(response);
                    }
                    break;
                case 2:
                    {
                        $(`#${articleId} small[name=dislikes]`).text(response);
                    }
                    break;
                }

            }
        });
    }

    function onBookmarkClick(articleId) {
        //todo: NotImplemented
    }

    function getArticlesPreviewPartial() {
        $.ajax({
            url: "/Articles/GetArticlesPreviewPartial",
            type: "GET",
            contentType: "application/json",
            error: function(jqXhr, textStatus, errorThrown) {
                console.log("jqXhr: " + jqXhr);
                console.log("textStatus: " + jqXhr);
                console.log("errorThrown: " + jqXhr);
            },
            success: function(response) {
                $("#articles-preview").html(response);
            }
        });
    }

    $(document).ready(function() {
        $("#write-article").click(function(e) {
            e.preventDefault();
            window.location.href = "/Articles/WriteArticle";
            return false;
        });

        getArticlesPreviewPartial();
    });
</script>
