<script>
    function onVoteClick(articleId, voteType) {
        var vote = {
            voteType: voteType
        }
        $.ajax({
            url: "/Articles/CreateArticleVote?articleId=" + articleId,
            type: "POST",
            data: JSON.stringify(vote),
            contentType: "application/json",
            error: function(jqXhr, textStatus, errorThrown) {
                console.log("jqXhr: " + jqXhr);
                console.log("textStatus: " + jqXhr);
                console.log("errorThrown: " + jqXhr);
            },
            success: function(response) {
                switch (voteType) {
                case 1:
                    {
                        $(`#${articleId} small[name=likes]`).text(response);
                    }
                    break;
                case 2:
                    {
                        $(`#${articleId} small[name=dislikes]`).text(response);
                    }
                    break;
                }

            }
        });
    }

    function onBookmarkClick(articleId) {
        //todo: NotImplemented
    }

    function getArticlesPreviewPartial() {
        $.ajax({
            url: "/Articles/GetArticlesPreviewPartial",
            type: "GET",
            contentType: "application/json",
            error: function(jqXhr, textStatus, errorThrown) {
                console.log("jqXhr: " + jqXhr);
                console.log("textStatus: " + jqXhr);
                console.log("errorThrown: " + jqXhr);
            },
            success: function(response) {
                $("#articles-preview").html(response);
            }
        });
    }

    $(document).ready(function() {
        $("#publish-article").click(function(e) {
            e.preventDefault();
            window.location.href = "/Articles/WriteArticle";
            return false;
        });

        getArticlesPreviewPartial();
    });
</script>
