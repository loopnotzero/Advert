<script> 
    function showReplyForm(commentId) {
        var simpleEditor;
        if ($("#comment-editor").length === 0) {
            $("#" + commentId).after("<textarea id='comment-editor' style='display: none'></textarea>");
            new SimpleMDE({
                status: false,
                element: $("#comment-editor")[0],
                placeholder: "Type here...",
                fullScreen: false,
                withPreview: false
            });
        } else {
            emptySimpleEditor();
            $("#" + commentId).after("<textarea id='comment-editor' style='display: none'></textarea>");
            new SimpleMDE({
                status: false,
                element: $("#comment-editor")[0],
                placeholder: "Type here...",
                fullScreen: false,
                withPreview: false
            });
        }
    }
    
    function emptySimpleEditor() {
        $("#comment-editor, .editor-toolbar, .CodeMirror, .editor-preview-side").remove();
    }

    $.urlParam = function(name, url) {
        if (!url) {
            url = window.location.href;
        }
        var results = new RegExp('[\\?&]' + name + '=([^&#]*)').exec(url);
        if (!results) {
            return undefined;
        }
        return results[1] || undefined;
    }

    var articleId = $.urlParam('articleId');

    $.ajax({
        url: "/Articles/GetArticleCommentsByArticleId?articleId=" + articleId,
        type: "GET",
        contentType: "application/json",
        error: function(jqXhr, textStatus, errorThrown) {
            console.log("jqXhr: " + jqXhr);
            console.log("textStatus: " + jqXhr);
            console.log("errorThrown: " + jqXhr);
        },
        success: function(response) {
            console.log("Article comments: " + response);
            $("#comments-count").html("Comments (" + response + ")");
        }
    });
</script>