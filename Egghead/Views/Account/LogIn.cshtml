@model Egghead.Models.Users.LogInModel

<div class="login">
    <div class="login__block active" id="l-login">
        <div class="login__block__header">
            <i class="fa fa-user-circle-o"></i>
            Sign in with your Egghead account
        </div>
        
        <form asp-controller="Account" asp-action="LogIn" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" novalidate="">
            @* @Html.AntiForgeryToken(); *@
            <div class="login__block__body">
                <div class="form-group form-group--float form-group--centered">
                    <input asp-for="Email" id="email" type="email" class="form-control">
                    <label>Email</label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                    <i class="form-group__bar"></i>
                </div>

                <div class="form-group form-group--float form-group--centered">
                    <input asp-for="Password" id="password" type="password" class="form-control">
                    <label>Password</label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                    <i class="form-group__bar"></i>
                </div>

                <button type="submit" class="btn btn--icon login__block__btn">
                    <i class="zmdi zmdi-long-arrow-right zmdi-hc-fw"></i>
                </button>

                <p class="mt-4">New to Egghead? <a href="/SignUp">Sign Up</a></p>
            </div>
        </form>      
    </div>
</div>