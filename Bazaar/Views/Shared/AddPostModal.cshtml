<div id="add__post--modal" class="modal fade" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <span class="font-weight-bold">Add post</span>
                <button id="add-post__close" type="button" class="btn btn-link" data-dismiss="modal">
                    <span>
                        <i class="zmdi zmdi-close zmdi-hc-fw"></i>
                    </span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <input id="add__post--title" type="text" class="form-control" maxlength="100" placeholder="What are you selling?" autocomplete="off">
                    <i class="form-group__bar"></i>
                </div>

                <div class="form-group">
                    <input id="add__post--location" type="text" class="form-control" placeholder="Enter a location">
                    <i class="form-group__bar"></i>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <input id="add__post--price" type="number" class="form-control" placeholder="Price" autocomplete="off">
                            <i class="form-group__bar"></i>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <select id="add__post--currency" class="form-control select2-pt">
                                <option selected="selected">â‚¬</option>
                                <option>$</option>
                                <option>MDL</option>
                            </select>
                            <i class="form-group__bar"></i>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <textarea id="add-post__text--editor" class="form-control" style="display: none"></textarea>
                </div>

                <form id="add__post-photos" class="dropzone needsclick dz-clickable">
                    <div class="dz-message needsclick">
                        <img src="~/images/add__photos.jpg"/>
                        <p>Add up to 10 photos</p>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button id="add-post__post" type="button" class="btn btn-primary">
                    Post
                </button>
            </div>
        </div>
    </div>
</div>